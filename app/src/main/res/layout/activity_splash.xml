<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".module.activity.app.SplashActivity">

    <ImageView
        android:id="@+id/iv_splash_poster"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <LinearLayout
        android:id="@+id/ll_countdown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_marginEnd="@dimen/dp_16"
        android:padding="@dimen/dp_6"
        android:orientation="horizontal"
        android:background="@drawable/shape_count_down"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <TextView
            android:id="@+id/tv_skip_ad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/dp_6"
            android:gravity="center_vertical"
            android:text="跳过"
            android:textSize="@dimen/sp_16"
            android:textColor="@android:color/white"/>
        <TextView
            android:id="@+id/tv_countdown_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="@dimen/dp_6"
            android:gravity="center_vertical"
            android:layout_marginStart="@dimen/dp_8"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/pink"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>